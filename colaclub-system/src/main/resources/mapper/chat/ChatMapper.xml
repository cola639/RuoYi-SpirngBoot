<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.colaclub.chat.mapper.UserChatMapper">
    <resultMap type="com.colaclub.chat.domain.UserChat" id="UserChatResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="message" column="message"/>
        <result property="messageType" column="message_type"/>
    </resultMap>

    <select id="selectChatList" resultMap="UserChatResult">
        SELECT *
        FROM user_chat
    </select>


    <sql id="selectUserChatVo">
        select id, user_id, create_time, update_time, message, message_type
        from user_chat
    </sql>

    <select id="selectUserChat" parameterType="com.colaclub.chat.domain.UserChat" resultMap="UserChatResult">
        <include refid="selectUserChatVo"/>
        <where>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="messageType != null  and messageType != ''">and message_type = #{messageType}</if>
        </where>
    </select>

    <insert id="insertChat" parameterType="com.colaclub.chat.domain.UserChat" useGeneratedKeys="true" keyProperty="id">
        insert into user_chat
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="message != null and message != ''">message,</if>
            <if test="messageType != null">message_type,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="message != null">#{message},</if>
            <if test="messageType != null">#{messageType},</if>
        </trim>
    </insert>


    <delete id="deleteChatById" parameterType="Long">
        delete
        from user_chat
        where user_id = #{userId}
    </delete>
</mapper>


