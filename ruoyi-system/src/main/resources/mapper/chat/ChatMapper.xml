<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.chat.mapper.UserChatMapper">
    <resultMap type="com.ruoyi.chat.model.UserChat" id="UserChatResult">
        <result property="id"    column="id"    />
        <result property="userId" column="user_id" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="message" column="message" />
        <result property="messageType" column="message_type" />
    </resultMap>

    <select id="selectChatList" resultMap="UserChatResult">
        SELECT * FROM user_chat
    </select>


    <sql id="selectUserChatVo">
        select id, user_id, create_time, update_time, message, message_type from user_chat
    </sql>

    <select id="selectUserChat" parameterType="com.ruoyi.chat.model.UserChat" resultMap="UserChatResult">
        <include refid="selectUserChatVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="message != null  and message != ''"> and message = #{message}</if>
            <if test="messageType != null  and messageType != ''"> and message_type = #{messageType}</if>
        </where>
    </select>
</mapper>


